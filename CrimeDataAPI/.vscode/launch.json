{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/app.js",
        "envFile": "${workspaceFolder}/.env"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program with Nodemon",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/app.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }